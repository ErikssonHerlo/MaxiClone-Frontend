{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",

      /* Configuración para evitar los errores */
      "strict": false,                 // Desactiva la verificación estricta
      "noUnusedLocals": false,         // Permite variables sin usar
      "noUnusedParameters": false,     // Permite parámetros sin usar implícito
      "noImplicitAny": false,          // Desactiva los errores de 'any' implícito
      "noImplicitReturns": false,      // Permite funciones sin return explícito
      "skipDefaultLibCheck": true,            // Omite la verificación de bibliotecas predeterminadas
    },
    "include": ["src", "src/lib.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
